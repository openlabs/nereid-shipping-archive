<tryton>
    <data>

      <menuitem name="Shipping Methods"
       	  sequence="50" id="menu_nereid_shipping"
          parent="nereid_configuration.menu_nereid_configuration" 
          groups="nereid_configuration.group_nereid_admin" />

      <record model="ir.ui.view" id="shipping_method_view_form">
            <field name="name">shipping.method.view.form</field>
            <field name="model">nereid.shipping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <![CDATA[
                <form string="Shipping Methods">
                    <label name="name">
                    <field name="name" />
                    <label name="is_allowed_for_guest">
                    <field name="is_allowed_for_guest" />
                    <label name="active">
                    <field name="active" />
                    <label name="website">
                    <field name="website" />
                    <separator string="Available Countries" colspan="4" />
                    <field name="available_countries" nolabel="1" colspan="4"/>
                </form>
            ]]>
            </field>
        </record> 

        <record model="ir.ui.view" id="shipping_method_view_tree">
            <field name="name">shipping.method.view.tree</field>
            <field name="model">nereid.shipping</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Shipping Methods">
                    <field name="name" />
                    <field name="is_allowed_for_guest" />
                    <field name="active" />
                    <field name="website" />
                </tree>
                ]]>
            </field>
        </record>


        <record model="ir.actions.act_window" id="act_shipping_method_tree">
            <field name="name">Shipping Methods</field>
            <field name="res_model">nereid.shipping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="shipping_method_view_tree"/>
       </record>
        
       <menuitem parent="menu_nereid_shipping" 
          action="act_shipping_method_tree"
          id="menu_shipping_method_tree" />

      <menuitem name="Default Shipping"
       	  sequence="50" id="menu_nereid_shipping_default"
          parent="menu_nereid_shipping" 
          groups="nereid_configuration.group_nereid_admin" />

      <record model="ir.ui.view" id="shipping_flat_rate_view_form">
            <field name="name">shipping.method.flat.view.form</field>
            <field name="model">nereid.shipping.method.flat</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Flat Rate Shipping">
                    <label name="name">
                    <field name="name" />
                    <label name="is_allowed_for_guest">
                    <field name="is_allowed_for_guest" />
                    <label name="active">
                    <field name="active" />
                    <label name="website">
                    <field name="website" />
                    <label name="price">
                    <field name="price" />
                    <separator string="Available Countries" colspan="4" />   
                    <field name="available_countries" nolabel="1" colspan="4"/>
                </form>
                ]]>
            </field>
        </record> 

        <record model="ir.ui.view" id="shipping_flat_rate_view_tree">
            <field name="name">shipping.method.flat.view.tree</field>
            <field name="model">nereid.shipping.method.flat</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Flat Rate Shipping">
                    <field name="name" />
                    <field name="is_allowed_for_guest" />
                    <field name="active" />
                    <field name="website" />
                    <field name="price" />
                </tree>
                ]]>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="act_shipping_flat_rate_tree">
            <field name="name">Flat Rate Shipping</field>
            <field name="res_model">nereid.shipping.method.flat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="shipping_flat_rate_view_tree"/>
       </record>
        
       <menuitem parent="menu_nereid_shipping_default" 
          action="act_shipping_flat_rate_tree"
          id="menu_shipping_method_flat_tree" />

      <record model="ir.ui.view" id="shipping_free_view_form">
            <field name="name">shipping.method.free.view.form</field>
            <field name="model">nereid.shipping.method.free</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Free Shipping">
                    <label name="name">
                    <field name="name" />
                    <field_name="is_allowed_for_guest">
                    <field name="is_allowed_for_guest" />
                    <label name="active">
                    <field name="active" />
                    <label name="website">
                    <field name="website" />
                    <labe name="minimum_order_value">
                    <field name="minimum_order_value" />
                    <separator string="Available Countries" colspan="4" />   
                    <field name="available_countries" nolabel="1" colspan="4"/>
                </form>
                ]]>
            </field>
        </record> 

        <record model="ir.ui.view" id="shipping_free_view_tree">
            <field name="name">shipping.method.free.view.tree</field>
            <field name="model">nereid.shipping.method.free</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                    <![CDATA[
                <tree string="Free Shipping">
                    <field name="name" />
                    <field name="is_allowed_for_guest" />
                    <field name="active" />
                    <field name="website" />
                    <field name="minimum_order_value" />
                </tree>
                    ]]>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="act_shipping_free_tree">
            <field name="name">Free Shipping</field>
            <field name="res_model">nereid.shipping.method.free</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="shipping_free_view_tree"/>
       </record>
        
       <menuitem parent="menu_nereid_shipping_default" 
          action="act_shipping_free_tree"
          id="menu_shipping_method_free_tree" />
      
      <record model="ir.ui.view" id="shipping_table_view_form">
            <field name="name">shipping.method.table.view.form</field>
            <field name="model">nereid.shipping.method.table</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                     <![CDATA[
                <form string="Shipping Table">
                    <field label="name">
                    <field name="name" />
                    <field label="is_allowed_for">
                    <field name="is_allowed_for_guest" />
                    <field name="active" />
                    <field name="website" />
                    <field name="factor" />
                    <newline/>
                    <field name="lines" nolabel="1" colspan="4" domain="[('country', 'in', available_countries)]"/>
                    <separator string="Available Countries" colspan="4" />                            
                    <field name="available_countries" nolabel="1" colspan="4"/>
                    <button name="price_get" type="object" string="Test" />
                </form>
                    ]]>
            </field>
        </record> 

        <record model="ir.ui.view" id="shipping_table_view_tree">
            <field name="name">shipping.method.table.view.tree</field>
            <field name="model">nereid.shipping.method.table</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                     <![CDATA[
                <tree string="Shipping Table">
                    <field name="name" />
                    <field name="is_allowed_for_guest" />
                    <field name="active" />
                    <field name="website" />
                    <field name="factor" />
                </tree>
                    ]]>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="act_shipping_table_tree">
            <field name="name">Shipping Table</field>
            <field name="res_model">nereid.shipping.method.table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="shipping_table_view_tree"/>
       </record>
        
       <menuitem parent="menu_nereid_shipping_default" 
          action="act_shipping_table_tree"
          id="menu_shipping_method_table_tree" />
          
      <record model="ir.ui.view" id="shipping_table_view_line_form">
            <field name="name">shipping.method.table.line.view.form</field>
            <field name="model">shipping.method.table.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                    <![CDATA[
                <form string="Line">
                    <field label="country">
                    <field name="country" />
                    <field label="state">
                    <field name="state" />
                    <field label="zip">
                    <field name="zip" />
                    <field label="factor">
                    <field name="factor" />
                    <field label="price">
                    <field name="price" />
                </form>
                    ]]>
            </field>
        </record> 

        <record model="ir.ui.view" id="shipping_table_view_line_tree">
            <field name="name">shipping.method.table.line.view.tree</field>
            <field name="model">shipping.method.table.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                    <![CDATA[
                <tree string="Lines">
                    <field name="country" />
                    <field name="state" />
                    <field name="zip" />
                    <field name="factor" />
                    <field name="price" />
                </tree>
                    ]]>
            </field>
        </record> 

    </data>
</tryton>
